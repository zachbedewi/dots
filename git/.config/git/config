[alias]

    # View abbreviated SHA, description, and history graph of the latest 20 
    # commits
    l = log --pretty=oneline -n 20 --graph --abbrev-commit

    # View the current working tree status using short format
    s = status -s

[color]

    # Use colors in Git commands when possible
    ui = auto

