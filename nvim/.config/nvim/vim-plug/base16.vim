" Configuration for the base16 neovim plugin
"
" Author: Zach Bedewi

" Necessary in order to avoid any bugs
let base16colorspace=256
set termguicolors

" Choose the colorscheme
colorscheme base16-material-palenight

" These settings can be used to deactivate the cursorline highlight and line
" number highlight
"hi CursorLine guibg=NONE guifg=bold
"hi LineNr guibg=NONE guifg=NONE
"hi CursorLineNr guibg=NONE
